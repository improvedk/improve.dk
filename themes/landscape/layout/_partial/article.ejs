<article>
	<div class="datebox">
		<div class="upper">
			<span class="month"><%- post.date.format("MMM") %></span>
			<span class="day"><%- post.date.format("DD") %></span>
		</div>
		<div class="lower"><%- post.date.year() %></div>
	</div>

	<div class="title">
		<h1><a href="/<%- post.path %>" title="<%= post.title %>" rel="bookmark"><%= post.title %></a></h1>
		<div class="categories">
			<% post.tags.forEach(function(tag, i) { %>
				<a href="/<%- tag.path %>"><%- tag.name %></a>
				<%- i < (post.tags.length - 1) ? ", " : "" %>
			<% }) %>
		</div>
		<% if(!index) { %>
			<div class="comments">
				<a href="#comments" title="Comment on <%= post.title %>">Comments</a>
			</div>
		<% } %>
		<div class="clear"></div>
	</div>

	<div id="bodywrapper" <% if (!index) { %>class="single"<% } %>>

		<% if (index && !fullPost) { %>

			<div class="body"><%- post.excerpt %></div>
		
		<% } else { %>
		
			<div class="body">
			
				<%- post.content %>

				<div style="clear: both"></div>

				<% if (!index) { %>
					<div id="postsharing">
						<a href="https://twitter.com/home?status=<%- encodeURIComponent(post.title + " " + post.permalink + " via @improvedk") %>" target="_blank" class="twitter"></a>
						<a href="https://www.facebook.com/sharer.php?u=<%- encodeURIComponent(page.permalink) %>" target="_blank" class="facebook"></a>
						<a href="http://reddit.com/submit?url=<%- encodeURIComponent(post.permalink) + "&title=" + encodeURIComponent(post.title) %>" target="_blank" class="reddit"></a>
						<a href="https://github.com/improvedk/improve.dk/blob/master/source/_posts/<%- post.slug %>/<%- post.slug %>.md" target="_blank" title="View source" class="github"></a>
					</div>

					<div id="bio">
						<div class="avatar"></div>
						<div class="wrapper">
							<div class="name">Mark S. Rasmussen</div>
							<div class="description">
								I'm the CTO at <a href="http://www.ipaper-cms.com/">iPaper</a> where I cuddle with databases, mold code and maintain the overall technical &amp; team responsibility. I'm an avid speaker at user groups &amp; conferences. I love life, motorcycles, photography and all things technical. Say hi on <a href="http://twitter.com/improvedk">Twitter</a>, write me an <a href="mailto:mark@improve.dk">email</a> or look me up on <a href="http://dk.linkedin.com/in/markrasmussen/">LinkedIn</a>.
							</div>
						</div>
						<div class="clear"></div>
					</div>
				<% } %>

			</div>

		<% } %>

		<% if (!index) { %>
			<%- partial('_partial/comments') %>
		<% } %>

	</div>
</article>